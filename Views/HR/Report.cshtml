@{
    ViewData["Title"] = "HR Report";
    var reportData = ViewBag.ReportData as CMCS.WebApp.Controllers.ReportData;
}

@if (reportData == null)
{
    <div class="alert alert-danger">
        <h4>Error Loading Report</h4>
        <p>Unable to load report data. Please try again.</p>
        <a href="@Url.Action("Dashboard", "HR")" class="btn btn-primary">Back to Dashboard</a>
    </div>
}
else
{
    <div class="container-fluid">
        <!-- Page Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-6">
                <i class="fas fa-file-alt text-primary me-2"></i>@reportData.ReportType.ToUpper() Report
            </h1>
            <div class="btn-group">
                <a href="@Url.Action("ExportToExcel", "HR", new { reportType = reportData.ReportType })" 
                   class="btn btn-success">
                    <i class="fas fa-file-excel me-1"></i>Export to Excel
                </a>
                <a href="@Url.Action("Dashboard", "HR")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to Dashboard
                </a>
            </div>
        </div>

        <!-- Report Summary -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Report Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <strong>Report Type:</strong> @reportData.ReportType.ToUpper()
                            </div>
                            <div class="col-md-3">
                                <strong>Generated:</strong> @reportData.GeneratedDate.ToString("yyyy-MM-dd HH:mm")
                            </div>
                            <div class="col-md-3">
                                <strong>Total Claims:</strong> @reportData.TotalClaims
                            </div>
                            <div class="col-md-3">
                                <strong>Total Amount:</strong> R @reportData.TotalAmount.ToString("N2")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Claims Table -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Claims Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th>Period</th>
                                        <th>Lecturer</th>
                                        <th>Department</th>
                                        <th>Hours</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var claim in reportData.Claims)
                                    {
                                        <tr>
                                            <td>@claim.Period.ToString("MMMM yyyy")</td>
                                            <td>@claim.LecturerName</td>
                                            <td>@claim.Department</td>
                                            <td>@claim.HoursWorked</td>
                                            <td>R @claim.TotalAmount.ToString("N2")</td>
                                            <td>
                                                <span class="badge @(claim.Status == "Approved" ? "bg-success" : claim.Status == "Rejected" ? "bg-danger" : "bg-warning")">
                                                    @claim.Status
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}